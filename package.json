    "localtunnel": "^2.0.1",
    "nock": "^13.0.5",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "smee-client": "^1.2.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcelovicentegc/octosync.git"
